<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li>
          <%= link_to "Overview", dashboard_path %>
        </li>
        <li class="active"><%= link_to "Settings", settings_path %></li>
      </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h1 class="page-header">Settings</h1>
      <%= render 'shared/flash_message' %>
      <div class="col-md-6 col-md-offset-3">
      <%= form_tag("settings") do %>
        <table class="table">
          <thead>
            <tr> 
              <th>Settings</th>
              <th>Enable</th>
              <th>Disable</th>
            </tr>
          </thead>
          <% Setting.all.each do |setting| %>
            <tr>
              <td bgcolor="#f4f4f4"><%= label_tag setting.config_key, setting.config_key.underscore.humanize.titlecase, class:'control-label' %></td>
              
              <td align="center"><%= radio_button_tag("ManagerLogin", true, checked= setting.config_value == true ? true : false) %></td>
              <td align="center"><%= radio_button_tag("ManagerLogin", false, checked= setting.config_value == false ? true : false) %></td>

            </tr>
          <% end %>
        </table>
        <div class="clearfix"></div>
        <div class="form-group text-center">
        <%= submit_tag("Save Changes", class: "btn btn-default") %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>