<div class="page-header">
  <div class="container">
    <h1>Activate Account</h1>
  </div>
</div>

<div id="main" class="main-container">
  <div class="container">
    <div class="row">
      
      </div>
      <div class="col-md-offset-3 col-md-6 st-tabs"> 
        
        <!-- Tab panes -->
        <div class="panel panel-default" style="border-radius: 0px;">
          <div class="panel-heading">Account Activation<% if resource.email %> for <%= resource.email %><% end %></div>
          <div class="panel-body">

            <%= render partial: "shared/flash_message" %>

            <p class="text-center">To continue, Enter your password below to activate your Account</p>

						<%= form_for resource, :as => resource_name, :url => update_user_confirmation_path, :html => {:method => 'patch'}, :id => 'activation-form' do |f| %>
						<%= devise_error_messages! %>

							<% if @requires_password %>
							  <div class="form-group">
								  <% if @requires_password %>
								      <%= f.label :password,'Choose a Password:', class: "control-label" %> 
								      <%= f.password_field :password, :class => "form-control" %>
								  <% end %>
							  </div>
							  <div class="form-group">
									<%= f.label :password_confirmation,'Password Confirmation:', class: "control-label" %> 
									<%= f.password_field :password_confirmation, :class => "form-control" %>
									<%= hidden_field_tag :confirmation_token,@confirmation_token %>
							  </div>

							<% end %>

						  <div class="form-group">
						    <%= f.submit "Activate", class: "btn tp-btn-primary btn-block" %>
						  </div>
						<% end %>

						<hr/>

						<%= render "devise/shared/links" %>

          </div>
        </div>

      </div>
    </div>
  </div>