<style type="text/css">
  .thumbnail {
     display: block; 
     padding: 0px; 
     margin-bottom: 0px; 
     line-height: 0; 
     background-color: #fff; 
     border: none; 
     border-radius: 0px;
  }  
</style>

<%- model_class = Venue -%>
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><%= @venue.name %></h1>  
      </div>
      <div class="col-md-6 text-right">
        <h1>
        <% if current_user %>
          <%= link_to t('.back', :default => t("helpers.links.back")),
                        venues_path, :class => 'btn btn-default'  %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_venue_path(@venue), :class => 'btn btn-default' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        venue_path(@venue),
                        :method => 'delete',
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger' %>  
        <% else %>
          <%= link_to t('.back', :default => t("helpers.links.back")),
                        venues_path, :class => 'btn btn-primary'  %>
        <% end %>
        </h1>

      </div>
    </div>
  </div>
</div>

<div id="main" class="main-container">
  <div class="container">
    <div class="section slider">          
      <div class="row">
        <!-- carousel -->
        <div class="col-md-7">
          <div id="product-carousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <% @venue.images.each_with_index do |image, index| %>
                <li data-target="#product-carousel" data-slide-to="<%= index %>" class="">
                  <%= attachment_image_tag(image, :thumbnail, :limit, 105, 104, class: "img-responsive") %>
                </li>
              <% end %>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
              <% @venue.images.each_with_index do |image, index| %>
                <!-- item -->
                <div class="item <%= index.to_i == 0 ? 'active' : '' %>">
                  <div class="carousel-image">
                    <!-- image-wrapper -->
                    <%= attachment_image_tag(image, :thumbnail, :limit, 614, 409, class: "img-responsive") %>
                  </div>
                </div>

              <% end %>
            </div><!-- carousel-inner -->

            <!-- Controls -->
            <a class="left carousel-control" href="#product-carousel" role="button" data-slide="prev">
              <i class="fa fa-chevron-left"></i>
            </a>
            <a class="right carousel-control" href="#product-carousel" role="button" data-slide="next">
              <i class="fa fa-chevron-right"></i>
            </a><!-- Controls -->

          </div>

        </div><!-- Controls --> 

        <!-- slider-text -->
        <div class="col-md-5">
          <div class="slider-text">
            <h2>
              <button class="btn btn-primary" type="button">
                Price: <span class="badge"><%= "&#8358;#{@venue.price}".html_safe %></span>
              </button>            
            </h2>
            <h3 class="title"><%= @venue.name %></h3>
            <p>
              <span>Offered by: <%= @venue.user.present? ? @venue.user.email : 'Annoynmous' %></span>
              <span class="icon"><i class="fa fa-clock-o"></i> <%= @venue.created_at.strftime("%B %d, %Y") %></span>
              <span class="icon"><i class="fa fa-suitcase online"></i><a href="#"> Manager <strong>(online)</strong></a></span>
            </p>
            
            <!-- short-info -->
            <div class="short-info">
              <h4 class="page-header">Venue Info</h4>
              <p><strong>State: </strong><%= "#{@venue.state.state} State" %> </p>
              <p><strong>Local Govt Area: </strong><%= "#{@venue.state.local_govt_area.lga} Local Govt. Area" %></p>
              <p><strong>Address: </strong><%= @venue.address %></p>
            </div><!-- short-info -->

            <div class="short-info">
              <h4 class="page-header">Facilities Info</h4>
              <% @venue.facilities.each do |facility| %>
                <p><strong><%= "#{facility.key}:" %> </strong><%= facility.value %> </p>
              <% end %>
            </div><!-- short-info -->            
            
            <!-- contact-with -->
            <div class="contact-with">
              <h4>Contact with </h4>
              <span class="btn btn-red show-number">
                <i class="fa fa-phone-square"></i>
                <span class="hide-text">Click to show phone number </span> 
                <span class="hide-number"><%= @venue.phone %></span>
              </span>
              <a href="#" class="btn"><i class="fa fa-envelope-square"></i>Book Venue</a>
            </div><!-- contact-with -->
            
            <!-- social-links -->
            <div class="social-links">
              <h4>Share this ad</h4>
              <ul class="list-inline">
                <li><a href="#"><i class="fa fa-facebook-square"></i></a></li>
                <li><a href="#"><i class="fa fa-twitter-square"></i></a></li>
                <li><a href="#"><i class="fa fa-google-plus-square"></i></a></li>
                <li><a href="#"><i class="fa fa-linkedin-square"></i></a></li>
                <li><a href="#"><i class="fa fa-pinterest-square"></i></a></li>
                <li><a href="#"><i class="fa fa-tumblr-square"></i></a></li>
              </ul>
            </div><!-- social-links -->           
          </div>
        </div><!-- slider-text -->        
      </div>        
    </div>
  </div>
</div>


<script>
  $('.show-number').on('click', function() {

    $('.hide-text').fadeIn(500, function() {
      $(this).addClass('hide');
    });  
  $('.hide-number').fadeIn(500, function() {
      $(this).addClass('show');
    });       
  });
</script>